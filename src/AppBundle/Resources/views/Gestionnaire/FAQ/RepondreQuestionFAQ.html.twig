{% extends "AppBundle::layout.html.twig" %}
{% block head %}
	{{ parent() }}
	{% block stylesheets %}
		{% stylesheets
 	
		%}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
		{% endstylesheets %}
	{% endblock %}
{% endblock %}

{% block body %}
<div class="r_cnx_colonneG full">							
    <h2>FAQ - Réponses aux questions des partenaires</h2>
		{{ form_start(form) }}
		<div class="block">
			<div class=labelconsult>Contact partenaire : </div> {{TableauQuestion.contact}}<br>
			<div class=labelconsult>Thème : </div> {{TableauQuestion.themeQuestion}}<br>
			<div class=labelconsult>Question  : </div> {{TableauQuestion.question}}<br>
			<div class=labelconsult>Date : </div> {{TableauQuestion.dateQuestion}}<br>		
		</div>
		
        <div class="block">
			{{ form_label(form.reponse1) }}
            {{ form_widget(form.reponse1) }}

        </div>
		{{ form_label(form.case_cocher_faq) }}
		{{ form_widget(form.case_cocher_faq) }}
		<div class="block">
			
			{{ form_label(form.question_reformule) }}
			{{ form_widget(form.question_reformule) }}
			<br>
			{{ form_label(form.reponse_reformule) }}
			{{ form_widget(form.reponse_reformule) }}	
			{{ form_rest(form) }}		
		<br>
		</div>
		<div class="row justify-content-center">
		<button type="submit" class="btn btn-primary ">Enregistrer</button>
		{{form_end(form)}}</div>
		
		<div class='green'>	
		<a href={{ path('FAQConsultQuestion') }} >&nbsp;&nbsp;&nbsp;Retour aux autres questions partenaires</a>
		</div>
		
	</div>
</div>
{% endblock %}

{% block footer %}
	{{ parent() }}
	{% javascripts
 		'@AppBundle/Resources/public/js/faq.js'
    %}
    <script src="{{ asset_url }}" charset="UTF-8"></script>
    {% endjavascripts %}
{% endblock %}