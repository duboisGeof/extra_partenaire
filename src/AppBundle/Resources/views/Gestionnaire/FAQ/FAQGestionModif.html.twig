{% extends "AppBundle::layout.html.twig" %}
{% block head %}
	{{ parent() }}
	{% block stylesheets %}
		{% stylesheets
	
		%}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
		{% endstylesheets %}
	{% endblock %}
{% endblock %}

{% block body %}
<div class="r_cnx_colonneG full">							
    <h2>Modification d'une question/réponse dans la FAQ</h2>
		<div class="block">
				<div class=labelconsult>Thème : </div> {{Theme}}<br>		
		</div>
		<div class="block">
			{{form_start(form)}}
			{{ form_widget(form) }}
		</div>
		
		<button type="submit" class="btn btn-primary">Enregistrer</button>
		{{form_end(form)}}	
		<a class=blue href={{ path('FAQGestionnaireGestion') }} >Retour à la consultation de toute la FAQ</a>
		</div>
		
	</div>
</div>
{% endblock %}

{% block footer %}
	{{ parent() }}
	{% javascripts
 		'@AppBundle/Resources/public/js/faq.js'
    %}
    <script src="{{ asset_url }}" charset="UTF-8"></script>
    {% endjavascripts %}
{% endblock %}