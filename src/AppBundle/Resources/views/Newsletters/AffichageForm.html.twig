{% extends "AppBundle::layout.html.twig" %}
{% block body %}
<div class="alert alert-success">
	Un mail vous a été envoyé
</div>
<div class="r_cnx_colonneG full">							
	<h2>Création newslettefr</h2>
	<br>
        {{ form_start(form, {'attr': {'id': 'formNewsletter'}}) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.content) }}
                {{ form_row(form.enregistrer) }}
                {{ 
                    form_row(form.apercu, { 'attr': {
                        'data-target': '#myModal', 
                        'data-toggle' : 'modal',
                    }}) 
                }}
               	{{ 
                    form_row(form.mailTest, { 'id': 'mailTest'}) 
				}}
        {{ form_end(form) }}
</div>

{% endblock %}
{% block footer %}
	{{ parent() }}
	{% javascripts
		'@AppBundle/Resources/public/js/datatable.min.js'
		'@AppBundle/Resources/public/js/config_validation.js'
		'@AppBundle/Resources/public/js/newsletter.js'
		'@AppBundle/Resources/public/js/jqueryValidate.min.js'
		'@AppBundle/Resources/public/js/newsletterValidate.js'
    %}
    <script src="{{ asset_url }}" charset="UTF-8"></script>
    
    {% endjavascripts %}

{% endblock %}
